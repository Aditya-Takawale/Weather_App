# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/weather_dashboard
MONGODB_TEST_URI=mongodb://localhost:27017/weather_dashboard_test

# OpenWeatherMap API Configuration
OPENWEATHER_API_KEY=your_api_key_here
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
WEATHER_CITY=Pune
WEATHER_COUNTRY_CODE=IN

# Cron Job Schedules
CRON_DATA_FETCH=*/30 * * * *
CRON_DASHBOARD_UPDATE=0 * * * *
CRON_DATA_CLEANUP=0 0 * * *
CRON_ALERT_CHECK=*/15 * * * *

# Alert Thresholds (Default values)
ALERT_HIGH_TEMP_THRESHOLD=35
ALERT_HIGH_HUMIDITY_THRESHOLD=80
ALERT_EXTREME_WEATHER=Storm,Thunderstorm,Hurricane,Tornado

# Data Retention
DATA_RETENTION_DAYS=2

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
